<p id="notice"><%= notice %></p>

<h1>User Assets</h1>

<table>
  <thead>
    <tr>
      <th>Asset name</th>
      <th>Count</th>
      <th>Status</th>
      <th>Returned</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_assets.each do |user_asset| %>
      <tr>
        <td><%= user_asset.asset_name %></td>
        <td><%= user_asset.count %></td>
        <td><%= user_asset.status %></td>
        <td><%= user_asset.returned %></td>
        <td><%= user_asset.user %></td>
        <td><%= link_to 'Show', user_asset %></td>
        <td><%= link_to 'Edit', edit_user_asset_path(user_asset) %></td>
        <td><%= link_to 'Destroy', user_asset, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

